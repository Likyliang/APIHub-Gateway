# APIHub-Gateway Environment Configuration
# Copy this file to .env and modify as needed

# ===========================================
# Application Settings
# ===========================================
APP_NAME=APIHub-Gateway
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000

# ===========================================
# Database
# ===========================================
# SQLite (default, simple setup)
DATABASE_URL=sqlite+aiosqlite:///./apihub.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/apihub

# ===========================================
# Security - CHANGE THESE IN PRODUCTION!
# ===========================================
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# ===========================================
# Upstream CLIProxyAPI
# ===========================================
UPSTREAM_URL=http://127.0.0.1:8317
UPSTREAM_TIMEOUT=300

# ===========================================
# API Key Settings
# ===========================================
API_KEY_PREFIX=ahg

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ===========================================
# Admin Account - CHANGE IN PRODUCTION!
# ===========================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@apihub.local

# ===========================================
# Payment Settings (EPay / 易支付)
# ===========================================
# 易支付网关地址
EPAY_URL=https://pay.example.com

# 商户ID
EPAY_PID=1000

# 商户密钥
EPAY_KEY=your_epay_key

# 支付回调地址 (留空则自动生成)
PAYMENT_NOTIFY_URL=

# 支付成功跳转地址 (留空则自动生成)
PAYMENT_RETURN_URL=

# ===========================================
# Site Settings
# ===========================================
SITE_NAME=APIHub Gateway
SITE_URL=http://localhost:3000
ALLOW_REGISTRATION=true
