# APIHub-Gateway Docker Environment
# Copy this file to .env for docker-compose

# Security
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars

# Admin Account
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@apihub.local

# Upstream CLIProxyAPI (use host.docker.internal to access host machine)
UPSTREAM_URL=http://host.docker.internal:8317

# Payment (EPay)
EPAY_URL=https://pay.example.com
EPAY_PID=1000
EPAY_KEY=your_epay_key
